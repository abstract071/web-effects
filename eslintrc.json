{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "eol-last": ["error", "always"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-quotes": ["error", "prefer-single"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error",
      99
    ],
    "no-console": ["warn"],
    "no-debugger": ["warn"],
    "no-extra-boolean-cast": ["error"],
    "no-mixed-spaces-and-tabs": ["error"],
    "no-multi-spaces": ["error"],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-redeclare": ["warn"],
    "no-return-assign": ["error", "always"],
    "no-trailing-spaces": ["error"],
    "no-unused-vars": [
      "error",
      {
        "ignoreRestSiblings": true,
        "caughtErrors": "all"
      }
    ],
    "no-var": ["warn"],
    "semi": ["error", "never"],
    "space-in-parens": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/prop-types": 0
  }
}
